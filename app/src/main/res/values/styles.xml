    <!--<item name="android:progressDrawable">@drawable/custom_ratingbar_bg</item>-->
    <!--<item name="android:minHeight">@dimen/size35</item>-->
    <!--<item name="android:maxHeight">@dimen/size35</item>-->
    <!--</style>-->

    <style name="PushAnimation">
        <item name="android:windowEnterAnimation">@anim/push_anim_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/push_anim_in_top</item>
    </style>


    <!--parent="@android:style/TextAppearance.Widget.TabWidget"-->
    <style name="CustomTabWidgetText">
        <item name="android:textSize">@dimen/text8</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
