<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMatch"
    android:layout_height="@dimen/size40"
    android:background="@color/header_bg">

    <RelativeLayout
        android:id="@+id/header_left_btn_lay"
        style="@style/LayoutMatch"
        android:layout_width="@dimen/size40"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/header_left_img"
            style="@style/LayoutMatch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size10" />
    </RelativeLayout>


    <TextView
        android:id="@+id/header_txt"
        style="@style/LayoutMatch"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/header_left_btn_lay"
        android:layout_toLeftOf="@+id/header_right_btn_lay"
        android:layout_toRightOf="@+id/header_left_btn_lay"
        android:layout_toStartOf="@+id/header_right_btn_lay"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text16"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/header_right_btn_lay"
        style="@style/LayoutMatch"
        android:layout_width="@dimen/size40"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/header_right_img"
            style="@style/LayoutMatch"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size10" />
    </RelativeLayout>


</RelativeLayout>
