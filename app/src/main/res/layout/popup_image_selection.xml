<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMatch"
    android:background="@color/transparent_black50">

    <RelativeLayout
        android:id="@+id/top_lay"
        style="@style/LayoutMatch"
        android:layout_above="@+id/bottom_lay"
        android:background="@color/transparent">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_lay"
        style="@style/LayoutMatchWrap"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/camera_lay"
            style="@style/LayoutMatchWrap"
            android:background="@drawable/white_gray_lay_bg">

            <ImageView
                android:id="@+id/camera_icon"
                android:layout_width="@dimen/size30"
                android:layout_height="@dimen/size30"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/size10"
                android:src="@drawable/camera_icon" />

            <TextView
                style="@style/LayoutWrap"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/camera_icon"
                android:gravity="center|left"
                android:text="@string/camera"
                android:textColor="@color/black"
                android:textSize="@dimen/size14" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gallery_lay"
            style="@style/LayoutMatchWrap"
            android:background="@drawable/white_gray_lay_bg">

            <ImageView
                android:id="@+id/gallery_icon"
                android:layout_width="@dimen/size30"
                android:layout_height="@dimen/size30"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/size10"
                android:src="@drawable/gallery_icon" />

            <TextView
                style="@style/LayoutWrap"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/gallery_icon"
                android:gravity="center|left"
                android:text="@string/gallery"
                android:textColor="@color/black"
                android:textSize="@dimen/size14" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
